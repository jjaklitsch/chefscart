  "instructions_json": {
    "time_total_min": 20,
    "steps": [
      {
        "step_no": 1,
        "text": "Toast the sliced almonds and sesame seeds in a dry skillet over medium heat, stirring frequently until golden and fragrant; remove immediately to a bowl to cool.",
        "time_min": 4
      },
      {
        "step_no": 2,
        "text": "If using frozen edamame, blanch in boiling water for 2 minutes then drain and rinse under cold water; if fresh, briefly blanch or use cooked ready-edamame and cool.",
        "time_min": 4
      },
      {
        "step_no": 3,
        "text": "Prepare the vegetables: thinly slice red cabbage, julienne carrots, dice cucumber, slice scallions, and roughly chop greens and herbs so all pieces are bite-sized.",
        "time_min": 6
      },
      {
        "step_no": 4,
        "text": "Whisk the dressing: combine soy sauce, rice vinegar, lime juice, honey, grated ginger, minced garlic, toasted sesame oil, neutral oil, black pepper and salt in a jar; shake or whisk until emulsified and taste-adjust.",
        "time_min": 3
      },
      {
        "step_no": 5,
        "text": "Toss salad: in a large bowl combine mixed greens, cabbage, carrots, cucumber, edamame, scallions and herbs; pour dressing over and toss gently to coat evenly.",
        "time_min": 2
      },
      {
        "step_no": 6,
        "text": "Finish and serve: transfer to serving platter or divide into bowls; sprinkle toasted almonds and sesame seeds on top and add red pepper flakes if desired.",
        "time_min": 1
      }
    ]
