{
  "name": "chefscart-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for ChefsCart",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.0"
  },
  "private": true
}
