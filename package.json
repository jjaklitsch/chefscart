{
  "name": "chefscart-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @chefscart/web dev",
    "build": "cd apps/web && npm install && npm run build",
    "build:pnpm": "pnpm -r build",
    "start": "pnpm --filter @chefscart/web start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:ui": "pnpm --filter @chefscart/web test:ui",
    "test:coverage": "pnpm -r test:coverage",
    "test:run": "pnpm -r test:run",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
    "setup": "pnpm install && pnpm build"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
